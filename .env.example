# ==================================
# AI Agent RAG Backend Configuration
# ==================================
# INSTRUCTIONS: Fill in your Azure OpenAI credentials below

# Application Settings
APP_NAME=AI Agent RAG Backend
APP_VERSION=1.0.0
DEBUG=true

# ============================================
# AZURE OPENAI CONFIGURATION (REQUIRED)
# ============================================
# Get these from Azure Portal > Your OpenAI Resource > Keys and Endpoint

# Your API Key (from "Keys and Endpoint" page)
AZURE_OPENAI_API_KEY=paste_your_key_here

# Your Endpoint URL (from "Keys and Endpoint" page)  
# Example: https://my-openai-resource.openai.azure.com/
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Your Chat Model Deployment Name (from Azure OpenAI Studio > Deployments)
# This is the name YOU gave when deploying gpt-4 or gpt-35-turbo
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Your Embedding Model Deployment Name
# This is the name YOU gave when deploying text-embedding-ada-002
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# API Version (usually don't need to change)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ============================================
# RAG CONFIGURATION (Optional - defaults work fine)
# ============================================
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K_RESULTS=3
SIMILARITY_THRESHOLD=0.7

# Vector Store Configuration
FAISS_INDEX_PATH=data/faiss_index
DOCUMENTS_PATH=documents

# Session Configuration
MAX_SESSION_HISTORY=10
SESSION_TIMEOUT_MINUTES=60
